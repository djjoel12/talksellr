<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MarketPlace Pro - Votre Boutique en Ligne</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    /* Variables de design professionnel */
    :root {
      --primary-color: #2c3e50;
      --secondary-color: #ffffff;
      --accent-color: #3498db;
      --success-color: #27ae60;
      --warning-color: #f39c12;
      --light-gray: #f8f9fa;
      --medium-gray: #e9ecef;
      --dark-gray: #6c757d;
      --text-color: #2c3e50;
      --border-radius: 8px;
      --spacing-xs: 8px;
      --spacing-sm: 16px;
      --spacing-md: 24px;
      --spacing-lg: 32px;
      --spacing-xl: 48px;
      --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      --shadow-hover: 0 8px 15px rgba(0, 0, 0, 0.15);
      --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Reset et styles de base */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: var(--text-color);
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      line-height: 1.6;
      min-height: 100vh;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    /* Header professionnel */
    header {
      background: linear-gradient(135deg, var(--primary-color) 0%, #34495e 100%);
      color: var(--secondary-color);
      padding: var(--spacing-sm) 0;
      position: sticky;
      top: 0;
      z-index: 1000;
      box-shadow: var(--shadow);
      backdrop-filter: blur(10px);
    }

    .header-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 var(--spacing-sm);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      font-size: 1.8rem;
      font-weight: 700;
      letter-spacing: -0.5px;
      background: linear-gradient(45deg, var(--secondary-color), var(--accent-color));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .nav-links {
      display: flex;
      gap: var(--spacing-lg);
    }

    .nav-links a {
      font-weight: 500;
      transition: var(--transition);
      position: relative;
      padding: var(--spacing-xs) var(--spacing-sm);
      border-radius: var(--border-radius);
    }

    .nav-links a:hover {
      background: rgba(255, 255, 255, 0.1);
      transform: translateY(-2px);
    }

    .header-actions {
      display: flex;
      gap: var(--spacing-md);
      align-items: center;
    }

    .search-bar {
      display: flex;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 25px;
      overflow: hidden;
      padding: 8px 16px;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .search-bar input {
      border: none;
      outline: none;
      background: transparent;
      color: var(--secondary-color);
      padding: 0 8px;
      width: 200px;
    }

    .search-bar input::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }

    .search-bar button {
      background: none;
      border: none;
      cursor: pointer;
      color: var(--secondary-color);
    }

    .icon-btn {
      background: rgba(255, 255, 255, 0.1);
      border: none;
      color: var(--secondary-color);
      font-size: 1.1rem;
      cursor: pointer;
      transition: var(--transition);
      position: relative;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      backdrop-filter: blur(10px);
    }

    .icon-btn:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }

    .cart-count {
      position: absolute;
      top: -5px;
      right: -5px;
      background: var(--accent-color);
      color: white;
      border-radius: 50%;
      width: 20px;
      height: 20px;
      font-size: 0.7rem;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
    }

    /* Hero Section professionnelle */
    .hero {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: var(--secondary-color);
      padding: var(--spacing-xl) 0;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="rgba(255,255,255,0.05)" points="0,1000 1000,0 1000,1000"/></svg>');
      background-size: cover;
    }

    .hero-content {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 var(--spacing-sm);
      position: relative;
      z-index: 1;
    }

    .hero h1 {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: var(--spacing-md);
      text-transform: uppercase;
      letter-spacing: 2px;
      background: linear-gradient(45deg, #fff, #f0f0f0);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero p {
      font-size: 1.3rem;
      margin-bottom: var(--spacing-lg);
      opacity: 0.9;
      font-weight: 300;
    }

    .cta-button {
      display: inline-block;
      background: linear-gradient(45deg, var(--accent-color), #2980b9);
      color: var(--secondary-color);
      padding: 16px 40px;
      font-weight: 600;
      font-size: 1.1rem;
      text-transform: uppercase;
      letter-spacing: 1.5px;
      transition: var(--transition);
      border: none;
      cursor: pointer;
      border-radius: 50px;
      box-shadow: var(--shadow);
    }

    .cta-button:hover {
      transform: translateY(-3px);
      box-shadow: var(--shadow-hover);
      background: linear-gradient(45deg, #2980b9, var(--accent-color));
    }

    /* Sections communes */
    .section {
      padding: var(--spacing-xl) 0;
    }

    .section-header {
      text-align: center;
      margin-bottom: var(--spacing-xl);
    }

    .section-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: var(--spacing-sm);
      background: linear-gradient(45deg, var(--primary-color), var(--accent-color));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .section-subtitle {
      color: var(--dark-gray);
      max-width: 600px;
      margin: 0 auto;
      font-size: 1.1rem;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 var(--spacing-sm);
    }

    /* Produits Section professionnelle */
    .produits-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--spacing-lg);
      margin-top: var(--spacing-lg);
    }

    .produit-card {
      background: var(--secondary-color);
      border-radius: var(--border-radius);
      overflow: hidden;
      transition: var(--transition);
      box-shadow: var(--shadow);
      position: relative;
    }

    .produit-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--shadow-hover);
    }

    .produit-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(45deg, var(--accent-color), var(--primary-color));
    }

    .produit-image {
      width: 100%;
      height: 220px;
      object-fit: cover;
      transition: var(--transition);
    }

    .produit-card:hover .produit-image {
      transform: scale(1.05);
    }

    .produit-content {
      padding: var(--spacing-md);
    }

    .produit-name {
      font-weight: 600;
      margin-bottom: var(--spacing-xs);
      font-size: 1.1rem;
      color: var(--primary-color);
    }

    .produit-prix {
      font-weight: 700;
      color: var(--accent-color);
      margin-bottom: var(--spacing-xs);
      font-size: 1.3rem;
    }

    .produit-boutique {
      color: var(--dark-gray);
      font-size: 0.9rem;
      margin-bottom: var(--spacing-sm);
      display: flex;
      align-items: center;
      gap: var(--spacing-xs);
    }

    .produit-boutique::before {
      content: 'üè™';
      font-size: 1rem;
    }

    .produit-actions {
      display: flex;
      gap: var(--spacing-xs);
      margin-top: var(--spacing-md);
    }

    .btn {
      display: inline-block;
      padding: 12px 20px;
      text-align: center;
      font-weight: 600;
      font-size: 0.9rem;
      cursor: pointer;
      transition: var(--transition);
      border: none;
      flex: 1;
      border-radius: var(--border-radius);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .btn-primary {
      background: linear-gradient(45deg, var(--accent-color), #2980b9);
      color: var(--secondary-color);
    }

    .btn-primary:hover {
      background: linear-gradient(45deg, #2980b9, var(--accent-color));
      transform: translateY(-2px);
      box-shadow: var(--shadow);
    }

    .btn-outline {
      background: transparent;
      color: var(--primary-color);
      border: 2px solid var(--primary-color);
    }

    .btn-outline:hover {
      background: var(--primary-color);
      color: var(--secondary-color);
      transform: translateY(-2px);
    }

    /* √âtat vide */
    .empty-state {
      text-align: center;
      padding: var(--spacing-xl);
      background: var(--secondary-color);
      border-radius: var(--border-radius);
      box-shadow: var(--shadow);
      margin: var(--spacing-xl) 0;
    }

    .empty-state i {
      font-size: 4rem;
      color: var(--dark-gray);
      margin-bottom: var(--spacing-md);
    }

    .empty-state h3 {
      color: var(--primary-color);
      margin-bottom: var(--spacing-sm);
    }

    .empty-state p {
      color: var(--dark-gray);
      margin-bottom: var(--spacing-lg);
    }

    /* Messages flash am√©lior√©s */
    .flash-message {
      position: fixed;
      top: 100px;
      right: 20px;
      background: linear-gradient(45deg, var(--success-color), #2ecc71);
      color: white;
      padding: 20px 25px;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow-hover);
      z-index: 1000;
      animation: slideInRight 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
      max-width: 400px;
    }

    .flash-message i {
      font-size: 1.2rem;
    }

    @keyframes slideInRight {
      from {
        transform: translateX(100%);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }

    @keyframes slideOutRight {
      from {
        transform: translateX(0);
        opacity: 1;
      }
      to {
        transform: translateX(100%);
        opacity: 0;
      }
    }

    /* Footer professionnel */
    footer {
      background: linear-gradient(135deg, var(--primary-color) 0%, #34495e 100%);
      color: var(--secondary-color);
      padding: var(--spacing-xl) 0 var(--spacing-md);
      margin-top: var(--spacing-xl);
    }

    .footer-content {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--spacing-lg);
      margin-bottom: var(--spacing-lg);
    }

    .footer-column h3 {
      font-size: 1.2rem;
      margin-bottom: var(--spacing-md);
      font-weight: 600;
      color: var(--accent-color);
    }

    .footer-links {
      list-style: none;
    }

    .footer-links li {
      margin-bottom: var(--spacing-xs);
    }

    .footer-links a {
      color: rgba(255, 255, 255, 0.8);
      transition: var(--transition);
      display: flex;
      align-items: center;
      gap: var(--spacing-xs);
    }

    .footer-links a:hover {
      color: var(--secondary-color);
      transform: translateX(5px);
    }

    .social-links {
      display: flex;
      gap: var(--spacing-sm);
      margin-top: var(--spacing-md);
    }

    .social-link {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      background: rgba(255, 255, 255, 0.1);
      color: var(--secondary-color);
      border-radius: 50%;
      transition: var(--transition);
      backdrop-filter: blur(10px);
    }

    .social-link:hover {
      background: var(--accent-color);
      transform: translateY(-3px);
    }

    .footer-bottom {
      text-align: center;
      padding-top: var(--spacing-md);
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.9rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .header-container {
        flex-direction: column;
        gap: var(--spacing-sm);
      }

      .nav-links {
        gap: var(--spacing-md);
        flex-wrap: wrap;
        justify-content: center;
      }

      .hero h1 {
        font-size: 2.5rem;
      }

      .section-title {
        font-size: 2rem;
      }

      .produits-grid {
        grid-template-columns: 1fr;
      }

      .produit-actions {
        flex-direction: column;
      }
    }

    /* Animation de chargement */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .produit-card {
      animation: fadeInUp 0.6s ease-out;
    }

    .produit-card:nth-child(odd) {
      animation-delay: 0.1s;
    }

    .produit-card:nth-child(even) {
      animation-delay: 0.2s;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header>
    <div class="header-container">
      <div class="logo">Market<span>Place</span> Pro</div>
      
      <nav class="nav-links">
        <a href="#" class="btn" onclick="goToSubdomain('<%= slug %>')">Accueil</a>
        <a href="#produits">Nos Produits</a>
        <a href="/boutique/mon">Ma Boutique</a>
        <% if (typeof user !== 'undefined' && user) { %>
          <a href="/vendeur/dashboard">Dashboard</a>
        <% } %>
      </nav>
      
      <div class="header-actions">
        <div class="search-bar">
          <input type="text" placeholder="Rechercher un produit...">
          <button><i class="fas fa-search"></i></button>
        </div>
        
        <% if (typeof user !== 'undefined' && user) { %>
          <a href="/vendeur/dashboard" class="icon-btn" title="Mon compte">
            <i class="fas fa-user-tie"></i>
          </a>
        <% } else { %>
          <a href="/auth/login" class="icon-btn" title="Se connecter">
            <i class="fas fa-sign-in-alt"></i>
          </a>
        <% } %>
        
        <a href="/panier" class="icon-btn" title="Panier">
          <i class="fas fa-shopping-cart"></i>
          <% if (typeof panierCount !== 'undefined' && panierCount > 0) { %>
            <span class="cart-count"><%= panierCount %></span>
          <% } %>
        </a>
      </div>
    </div>
  </header>

  <!-- Messages flash -->
  <% if (typeof message !== 'undefined' && message) { %>
    <div class="flash-message">
      <i class="fas fa-check-circle"></i>
      <span><%= message %></span>
    </div>
    <script>
      setTimeout(() => {
        const flashMessage = document.querySelector('.flash-message');
        if (flashMessage) {
          flashMessage.style.animation = 'slideOutRight 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
          setTimeout(() => flashMessage.remove(), 500);
        }
      }, 4000);
    </script>
  <% } %>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>Votre Boutique Pro</h1>
      <p>D√©couvrez une s√©lection exclusive de produits de qualit√©, soigneusement choisis par nos vendeurs professionnels</p>
      <a href="#produits" class="cta-button">D√©couvrir les produits</a>
    </div>
  </section>

  <!-- Produits Section -->
  <section class="section" id="produits">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Produits en Vedette</h2>
        <p class="section-subtitle">Une s√©lection des meilleurs produits de nos vendeurs partenaires</p>
      </div>
      
      <% if (typeof produits !== 'undefined' && produits.length > 0) { %>
        <div class="produits-grid">
          <% produits.forEach(produit => { %>
            <div class="produit-card">
              <img src="<%= produit.image %>" alt="<%= produit.nom %>" class="produit-image">
              <div class="produit-content">
                <h3 class="produit-name"><%= produit.nom %></h3>
                <p class="produit-prix"><%= produit.prix %> <%= produit.devise %></p>
                <p class="produit-boutique">
                  <% if (produit.boutique && produit.boutique.nom) { %>
                    <%= produit.boutique.nom %>
                  <% } else if (produit.vendeur && produit.vendeur.nom) { %>
                    Vendeur: <%= produit.vendeur.nom %>
                  <% } else { %>
                    Boutique Professionnelle
                  <% } %>
                </p>
                <% if (produit.description) { %>
                  <p style="color: var(--dark-gray); font-size: 0.9rem; margin-bottom: var(--spacing-sm);">
                    <%= produit.description.length > 100 ? produit.description.substring(0, 100) + '...' : produit.description %>
                  </p>
                <% } %>
                <div class="produit-actions">
                  <form action="/panier/ajouter/<%= produit._id %>" method="POST" style="display: inline; flex: 1;">
                    <button type="submit" class="btn btn-primary">
                      <i class="fas fa-cart-plus"></i> Ajouter
                    </button>
                  </form>
                  <a href="/boutique/produit/<%= produit._id %>" class="btn btn-outline">
                    <i class="fas fa-eye"></i> D√©tails
                  </a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-state">
          <i class="fas fa-box-open"></i>
          <h3>Aucun produit disponible</h3>
          <p>Les produits de nos vendeurs appara√Ætront bient√¥t ici.</p>
          <% if (typeof user !== 'undefined' && user && user.role === 'vendeur') { %>
            <a href="/produits/ajouter" class="btn btn-primary">
              <i class="fas fa-plus"></i> Ajouter mon premier produit
            </a>
          <% } else if (typeof user !== 'undefined' && user) { %>
            <a href="/boutique/creer" class="btn btn-primary">
              <i class="fas fa-store"></i> Cr√©er ma boutique
            </a>
          <% } else { %>
            <a href="/auth/register" class="btn btn-primary">
              <i class="fas fa-user-plus"></i> Devenir vendeur
            </a>
          <% } %>
        </div>
      <% } %>
    </div>
  </section>

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="footer-content">
        <div class="footer-column">
          <h3>MarketPlace Pro</h3>
          <p>Plateforme professionnelle pour vendeurs et acheteurs exigeants. Qualit√© et service garantis.</p>
          <div class="social-links">
            <a href="#" class="social-link"><i class="fab fa-linkedin-in"></i></a>
            <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
            <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
            <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
          </div>
        </div>
        
        <div class="footer-column">
          <h3>Navigation</h3>
          <ul class="footer-links">
            <a href="#" class="btn" onclick="goToSubdomain('<%= slug %>')">Accueil</a>
</li>
<li><a href="#produits">Produits</a></li>
<li><a href="/boutique/mon">Ma Boutique</a></li>
<li><a href="/vendeur/dashboard">Dashboard</a></li>
          </ul>
        </div>
        
        <div class="footer-column">
          <h3>Support</h3>
          <ul class="footer-links">
            <li><a href="#"><i class="fas fa-headset"></i> Centre d'aide</a></li>
            <li><a href="#"><i class="fas fa-shipping-fast"></i> Livraison</a></li>
            <li><a href="#"><i class="fas fa-undo"></i> Retours</a></li>
            <li><a href="#"><i class="fas fa-phone"></i> Contact</a></li>
          </ul>
        </div>
        
        <div class="footer-column">
          <h3>L√©gal</h3>
          <ul class="footer-links">
            <li><a href="#"><i class="fas fa-file-contract"></i> Conditions</a></li>
            <li><a href="#"><i class="fas fa-shield-alt"></i> Confidentialit√©</a></li>
            <li><a href="#"><i class="fas fa-gavel"></i> Mentions l√©gales</a></li>
            <li><a href="#"><i class="fas fa-cookie"></i> Cookies</a></li>
          </ul>
        </div>
      </div>
      
      <div class="footer-bottom">
        <p>&copy; 2024 MarketPlace Pro. Tous droits r√©serv√©s. | Plateforme professionnelle</p>
      </div>
    </div>
  </footer>

  <script>
    // Animation au scroll
    document.addEventListener('DOMContentLoaded', function() {
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, observerOptions);

      // Observer les cartes produits
      document.querySelectorAll('.produit-card').forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(30px)';
        card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(card);
      });

      // Effet de recherche
      const searchInput = document.querySelector('.search-bar input');
      if (searchInput) {
        searchInput.addEventListener('focus', function() {
          this.parentElement.style.background = 'rgba(255, 255, 255, 0.2)';
          this.parentElement.style.transform = 'scale(1.05)';
        });

        searchInput.addEventListener('blur', function() {
          this.parentElement.style.background = 'rgba(255, 255, 255, 0.1)';
