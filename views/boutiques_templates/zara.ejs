<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LuxeMarket - Excellence & Raffinement</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    /* Variables de design luxueux */
    :root {
      --gold-primary: #D4AF37;
      --gold-secondary: #FFD700;
      --gold-light: #F7EF8A;
      --dark-elegant: #1a1a1a;
      --dark-rich: #2d2d2d;
      --dark-charcoal: #3a3a3a;
      --cream: #f8f5f0;
      --white-pure: #ffffff;
      --text-light: #e8e8e8;
      --text-muted: #b0b0b0;
      --border-gold: rgba(212, 175, 55, 0.3);
      --shadow-luxe: 0 10px 40px rgba(0, 0, 0, 0.2);
      --shadow-gold: 0 0 30px rgba(212, 175, 55, 0.3);
      --transition-luxe: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      --border-radius-luxe: 12px;
      --spacing-xs: 12px;
      --spacing-sm: 20px;
      --spacing-md: 32px;
      --spacing-lg: 48px;
      --spacing-xl: 80px;
    }

    /* Reset et styles de base luxueux */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Playfair Display', 'Times New Roman', serif;
      color: var(--text-light);
      background: linear-gradient(135deg, var(--dark-elegant) 0%, var(--dark-rich) 50%, var(--dark-charcoal) 100%);
      line-height: 1.7;
      min-height: 100vh;
      overflow-x: hidden;
    }

    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: 
        radial-gradient(circle at 20% 80%, rgba(212, 175, 55, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(212, 175, 55, 0.02) 0%, transparent 50%);
      pointer-events: none;
      z-index: -1;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    /* Header luxueux */
    header {
      background: rgba(26, 26, 26, 0.95);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid var(--border-gold);
      padding: var(--spacing-sm) 0;
      position: sticky;
      top: 0;
      z-index: 1000;
      transition: var(--transition-luxe);
    }

    .header-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 var(--spacing-md);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      font-size: 2.2rem;
      font-weight: 700;
      letter-spacing: 3px;
      background: linear-gradient(45deg, var(--gold-primary), var(--gold-light));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-transform: uppercase;
      position: relative;
    }

    .logo::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, transparent, var(--gold-primary), transparent);
    }

    .nav-links {
      display: flex;
      gap: var(--spacing-lg);
    }

    .nav-links a {
      font-weight: 500;
      transition: var(--transition-luxe);
      position: relative;
      padding: var(--spacing-xs) var(--spacing-sm);
      border-radius: var(--border-radius-luxe);
      font-size: 0.9rem;
      letter-spacing: 1px;
      text-transform: uppercase;
    }

    .nav-links a::before {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      width: 0;
      height: 1px;
      background: var(--gold-primary);
      transition: var(--transition-luxe);
      transform: translateX(-50%);
    }

    .nav-links a:hover::before {
      width: 80%;
    }

    .nav-links a:hover {
      color: var(--gold-primary);
    }

    .header-actions {
      display: flex;
      gap: var(--spacing-md);
      align-items: center;
    }

    .search-bar {
      display: flex;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 25px;
      overflow: hidden;
      padding: 10px 20px;
      backdrop-filter: blur(10px);
      border: 1px solid var(--border-gold);
      transition: var(--transition-luxe);
    }

    .search-bar:focus-within {
      border-color: var(--gold-primary);
      box-shadow: var(--shadow-gold);
    }

    .search-bar input {
      border: none;
      outline: none;
      background: transparent;
      color: var(--text-light);
      padding: 0 12px;
      width: 200px;
      font-family: inherit;
    }

    .search-bar input::placeholder {
      color: var(--text-muted);
      font-style: italic;
    }

    .search-bar button {
      background: none;
      border: none;
      cursor: pointer;
      color: var(--gold-primary);
      transition: var(--transition-luxe);
    }

    .search-bar button:hover {
      transform: scale(1.1);
    }

    .icon-btn {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid var(--border-gold);
      color: var(--gold-primary);
      font-size: 1.1rem;
      cursor: pointer;
      transition: var(--transition-luxe);
      position: relative;
      width: 45px;
      height: 45px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      backdrop-filter: blur(10px);
    }

    .icon-btn:hover {
      background: var(--gold-primary);
      color: var(--dark-elegant);
      transform: translateY(-2px);
      box-shadow: var(--shadow-gold);
    }

    /* Badge de notification luxueux */
    .cart-badge {
      position: absolute;
      top: -5px;
      right: -5px;
      background: linear-gradient(45deg, #ff4444, #ff6b6b);
      color: var(--white-pure);
      border-radius: 50%;
      width: 22px;
      height: 22px;
      font-size: 0.7rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      justify-content: center;
      animation: pulse 2s infinite;
      box-shadow: 0 2px 15px rgba(255, 68, 68, 0.4);
      border: 2px solid var(--dark-elegant);
    }

    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.1); }
      100% { transform: scale(1); }
    }

    /* Hero Section luxueuse */
    .hero {
      background: linear-gradient(135deg, var(--dark-elegant) 0%, var(--dark-charcoal) 100%);
      color: var(--text-light);
      padding: var(--spacing-xl) 0;
      text-align: center;
      position: relative;
      overflow: hidden;
      min-height: 80vh;
      display: flex;
      align-items: center;
    }

    .hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000" opacity="0.02"><defs><pattern id="luxe" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="%23D4AF37"/></pattern></defs><rect width="1000" height="1000" fill="url(%23luxe)"/></svg>');
    }

    .hero-content {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 var(--spacing-md);
      position: relative;
      z-index: 1;
    }

    .hero h1 {
      font-size: 4rem;
      font-weight: 700;
      margin-bottom: var(--spacing-md);
      background: linear-gradient(45deg, var(--gold-primary), var(--gold-light), var(--gold-secondary));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: 3px;
      line-height: 1.2;
    }

    .hero p {
      font-size: 1.4rem;
      margin-bottom: var(--spacing-lg);
      opacity: 0.9;
      font-weight: 300;
      letter-spacing: 1px;
      line-height: 1.6;
    }

    .cta-button {
      display: inline-block;
      background: linear-gradient(45deg, var(--gold-primary), var(--gold-secondary));
      color: var(--dark-elegant);
      padding: 18px 45px;
      font-weight: 600;
      font-size: 1.1rem;
      text-transform: uppercase;
      letter-spacing: 2px;
      transition: var(--transition-luxe);
      border: none;
      cursor: pointer;
      border-radius: 50px;
      box-shadow: var(--shadow-luxe);
      position: relative;
      overflow: hidden;
    }

    .cta-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
      transition: left 0.5s;
    }

    .cta-button:hover::before {
      left: 100%;
    }

    .cta-button:hover {
      transform: translateY(-3px);
      box-shadow: var(--shadow-gold);
    }

    /* Notification Panier Luxueuse */
    .cart-notification {
      position: fixed;
      top: 120px;
      right: 30px;
      background: rgba(26, 26, 26, 0.95);
      color: var(--text-light);
      padding: var(--spacing-md);
      border-radius: var(--border-radius-luxe);
      box-shadow: var(--shadow-luxe);
      border: 1px solid var(--border-gold);
      z-index: 9999;
      transform: translateX(400px);
      opacity: 0;
      transition: var(--transition-luxe);
      max-width: 380px;
      backdrop-filter: blur(20px);
    }

    .cart-notification.show {
      transform: translateX(0);
      opacity: 1;
    }

    .notification-content {
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
    }

    .notification-icon {
      font-size: 1.4rem;
      color: var(--gold-primary);
    }

    .notification-text {
      flex: 1;
    }

    .notification-title {
      font-size: 0.9rem;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      margin-bottom: 4px;
      color: var(--gold-primary);
    }

    .notification-message {
      font-size: 0.85rem;
      font-weight: 300;
      letter-spacing: 0.5px;
      opacity: 0.9;
    }

    .notification-actions {
      display: flex;
      gap: var(--spacing-xs);
      margin-top: var(--spacing-sm);
      padding-top: var(--spacing-sm);
      border-top: 1px solid var(--border-gold);
    }

    .notification-btn {
      padding: 10px 20px;
      font-size: 0.8rem;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      text-decoration: none;
      transition: var(--transition-luxe);
      border: 1px solid var(--border-gold);
      flex: 1;
      text-align: center;
      border-radius: 25px;
    }

    .notification-btn-primary {
      background: var(--gold-primary);
      color: var(--dark-elegant);
    }

    .notification-btn-primary:hover {
      background: transparent;
      color: var(--gold-primary);
    }

    .notification-btn-outline {
      background: transparent;
      color: var(--gold-primary);
    }

    .notification-btn-outline:hover {
      background: var(--gold-primary);
      color: var(--dark-elegant);
    }

    /* Sections communes luxueuses */
    .section {
      padding: var(--spacing-xl) 0;
    }

    .section-header {
      text-align: center;
      margin-bottom: var(--spacing-xl);
    }

    .section-title {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: var(--spacing-sm);
      background: linear-gradient(45deg, var(--gold-primary), var(--gold-light));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: 2px;
    }

    .section-subtitle {
      color: var(--text-muted);
      max-width: 600px;
      margin: 0 auto;
      font-size: 1.2rem;
      font-weight: 300;
      letter-spacing: 1px;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 var(--spacing-md);
    }

    /* Produits Section luxueuse */
    .produits-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: var(--spacing-lg);
      margin-top: var(--spacing-lg);
    }

    .produit-card {
      background: rgba(255, 255, 255, 0.05);
      border-radius: var(--border-radius-luxe);
      overflow: hidden;
      transition: var(--transition-luxe);
      box-shadow: var(--shadow-luxe);
      position: relative;
      backdrop-filter: blur(10px);
      border: 1px solid var(--border-gold);
    }

    .produit-card:hover {
      transform: translateY(-12px);
      box-shadow: var(--shadow-gold);
      border-color: var(--gold-primary);
    }

    .produit-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(45deg, var(--gold-primary), var(--gold-secondary));
      z-index: 2;
    }

    /* Galerie de photos luxueuse */
    .produit-gallery {
      position: relative;
      height: 280px;
      overflow: hidden;
    }

    .gallery-main {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: var(--transition-luxe);
    }

    .produit-card:hover .gallery-main {
      transform: scale(1.08);
    }

    .gallery-thumbnails {
      position: absolute;
      bottom: 15px;
      left: 0;
      right: 0;
      display: flex;
      justify-content: center;
      gap: 8px;
      padding: 0 15px;
    }

    .thumbnail {
      width: 45px;
      height: 45px;
      border-radius: 6px;
      border: 2px solid rgba(255, 255, 255, 0.8);
      cursor: pointer;
      object-fit: cover;
      transition: var(--transition-luxe);
      backdrop-filter: blur(10px);
    }

    .thumbnail:hover {
      transform: scale(1.15);
      border-color: var(--gold-primary);
    }

    .thumbnail.active {
      border-color: var(--gold-primary);
      transform: scale(1.1);
      box-shadow: 0 0 15px rgba(212, 175, 55, 0.5);
    }

    .gallery-counter {
      position: absolute;
      top: 15px;
      right: 15px;
      background: rgba(26, 26, 26, 0.8);
      color: var(--gold-primary);
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
      backdrop-filter: blur(10px);
      border: 1px solid var(--border-gold);
    }

    .gallery-btn {
      position: absolute;
      bottom: 15px;
      left: 15px;
      background: rgba(26, 26, 26, 0.8);
      color: var(--gold-primary);
      border: 1px solid var(--border-gold);
      padding: 8px 16px;
      font-size: 0.8rem;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      cursor: pointer;
      transition: var(--transition-luxe);
      border-radius: 20px;
      backdrop-filter: blur(10px);
    }

    .gallery-btn:hover {
      background: var(--gold-primary);
      color: var(--dark-elegant);
    }

    .produit-content {
      padding: var(--spacing-md);
    }

    .produit-name {
      font-weight: 600;
      margin-bottom: var(--spacing-xs);
      font-size: 1.2rem;
      color: var(--gold-primary);
      letter-spacing: 1px;
    }

    .produit-prix {
      font-weight: 700;
      color: var(--gold-secondary);
      margin-bottom: var(--spacing-xs);
      font-size: 1.5rem;
      letter-spacing: 1px;
    }

    .produit-boutique {
      color: var(--text-muted);
      font-size: 0.9rem;
      margin-bottom: var(--spacing-sm);
      display: flex;
      align-items: center;
      gap: var(--spacing-xs);
    }

    .produit-boutique::before {
      content: '✨';
      font-size: 1rem;
    }

    .produit-actions {
      display: flex;
      gap: var(--spacing-xs);
      margin-top: var(--spacing-md);
    }

    .btn {
      display: inline-block;
      padding: 14px 24px;
      text-align: center;
      font-weight: 600;
      font-size: 0.9rem;
      cursor: pointer;
      transition: var(--transition-luxe);
      border: none;
      flex: 1;
      border-radius: var(--border-radius-luxe);
      text-transform: uppercase;
      letter-spacing: 1px;
      position: relative;
      overflow: hidden;
    }

    .btn-primary {
      background: linear-gradient(45deg, var(--gold-primary), var(--gold-secondary));
      color: var(--dark-elegant);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-gold);
    }

    .btn-outline {
      background: transparent;
      color: var(--gold-primary);
      border: 2px solid var(--gold-primary);
    }

    .btn-outline:hover {
      background: var(--gold-primary);
      color: var(--dark-elegant);
      transform: translateY(-2px);
    }

    /* Modal pour la galerie luxueux */
    .modal {
      display: none;
      position: fixed;
      z-index: 10000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.95);
      animation: fadeIn 0.4s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .modal-content {
      position: relative;
      margin: auto;
      padding: 20px;
      width: 95%;
      max-width: 900px;
      height: 95vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .modal-image {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      border-radius: var(--border-radius-luxe);
      transition: opacity 0.3s ease;
      box-shadow: var(--shadow-luxe);
    }

    .modal-close {
      position: absolute;
      top: 30px;
      right: 40px;
      color: var(--gold-primary);
      font-size: 2.5rem;
      font-weight: bold;
      cursor: pointer;
      background: none;
      border: none;
      z-index: 10001;
      transition: var(--transition-luxe);
    }

    .modal-close:hover {
      transform: scale(1.2);
      color: var(--gold-secondary);
    }

    .modal-nav {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(212, 175, 55, 0.2);
      color: var(--gold-primary);
      border: 2px solid var(--gold-primary);
      padding: 20px 25px;
      font-size: 1.8rem;
      cursor: pointer;
      border-radius: 50%;
      z-index: 10001;
      transition: var(--transition-luxe);
      backdrop-filter: blur(10px);
    }

    .modal-prev {
      left: 30px;
    }

    .modal-next {
      right: 30px;
    }

    .modal-nav:hover {
      background: var(--gold-primary);
      color: var(--dark-elegant);
      transform: translateY(-50%) scale(1.1);
    }

    .modal-counter {
      position: absolute;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      color: var(--gold-primary);
      font-size: 1.2rem;
      background: rgba(26, 26, 26, 0.8);
      padding: 12px 24px;
      border-radius: 25px;
      backdrop-filter: blur(10px);
      border: 1px solid var(--border-gold);
    }

    /* Footer luxueux */
    footer {
      background: linear-gradient(135deg, var(--dark-elegant) 0%, #000000 100%);
      color: var(--text-light);
      padding: var(--spacing-xl) 0 var(--spacing-lg);
      margin-top: var(--spacing-xl);
      border-top: 1px solid var(--border-gold);
    }

    .footer-content {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--spacing-lg);
      margin-bottom: var(--spacing-lg);
    }

    .footer-column h3 {
      font-size: 1.3rem;
      margin-bottom: var(--spacing-md);
      font-weight: 600;
      color: var(--gold-primary);
      letter-spacing: 1px;
    }

    .footer-links {
      list-style: none;
    }

    .footer-links li {
      margin-bottom: var(--spacing-xs);
    }

    .footer-links a {
      color: var(--text-muted);
      transition: var(--transition-luxe);
      display: flex;
      align-items: center;
      gap: var(--spacing-xs);
      font-size: 0.9rem;
    }

    .footer-links a:hover {
      color: var(--gold-primary);
      transform: translateX(8px);
    }

    .social-links {
      display: flex;
      gap: var(--spacing-sm);
      margin-top: var(--spacing-md);
    }

    .social-link {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 45px;
      height: 45px;
      background: rgba(255, 255, 255, 0.05);
      color: var(--gold-primary);
      border-radius: 50%;
      transition: var(--transition-luxe);
      backdrop-filter: blur(10px);
      border: 1px solid var(--border-gold);
    }

    .social-link:hover {
      background: var(--gold-primary);
      color: var(--dark-elegant);
      transform: translateY(-3px);
      box-shadow: var(--shadow-gold);
    }

    .footer-bottom {
      text-align: center;
      padding-top: var(--spacing-md);
      border-top: 1px solid var(--border-gold);
      color: var(--text-muted);
      font-size: 0.9rem;
      letter-spacing: 1px;
    }

    /* Responsive design luxueux */
    @media (max-width: 768px) {
      .header-container {
        flex-direction: column;
        gap: var(--spacing-sm);
      }

      .nav-links {
        gap: var(--spacing-md);
        flex-wrap: wrap;
        justify-content: center;
      }

      .hero h1 {
        font-size: 2.8rem;
      }

      .section-title {
        font-size: 2.2rem;
      }

      .produits-grid {
        grid-template-columns: 1fr;
      }

      .produit-actions {
        flex-direction: column;
      }

      .cart-notification {
        right: 15px;
        left: 15px;
        max-width: none;
      }

      .modal-nav {
        padding: 15px 20px;
        font-size: 1.4rem;
      }

      .modal-prev {
        left: 15px;
      }

      .modal-next {
        right: 15px;
      }
    }

    /* Animations luxueuses */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .produit-card {
      animation: fadeInUp 0.8s ease-out;
    }

    .produit-card:nth-child(odd) {
      animation-delay: 0.1s;
    }

    .produit-card:nth-child(even) {
      animation-delay: 0.2s;
    }
  </style>
</head>
<body>
  <!-- Notification Panier Luxueuse -->
  <div id="cartNotification" class="cart-notification">
    <div class="notification-content">
      <div class="notification-icon">✨</div>
      <div class="notification-text">
        <div class="notification-title">PRODUIT AJOUTÉ</div>
        <div class="notification-message" id="notificationMessage">Le produit a été ajouté à votre panier</div>
      </div>
    </div>
    <div class="notification-actions">
      <a href="/panier" class="notification-btn notification-btn-primary">VOIR LE PANIER</a>
      <button onclick="hideNotification()" class="notification-btn notification-btn-outline">CONTINUER</button>
    </div>
  </div>

  <!-- Modal pour la galerie complète -->
  <div id="galleryModal" class="modal">
    <button class="modal-close" onclick="closeGallery()">&times;</button>
    
    <button class="modal-nav modal-prev" onclick="changeModalImage(-1)">❮</button>
    <button class="modal-nav modal-next" onclick="changeModalImage(1)">❯</button>
    
    <div class="modal-content">
      <img id="modalImage" class="modal-image" src="" alt="">
    </div>
    
    <div class="modal-counter">
      <span id="modalCounter">1 / 1</span>
    </div>
  </div>

  <!-- Header -->
  <header>
    <div class="header-container">
      <div class="logo">LuxeMarket</div>
      
      <nav class="nav-links">
        <a href="#" class="btn" onclick="goToSubdomain('<%= slug %>')">Accueil</a>
        <a href="#produits">Collection</a>
        <a href="/boutique/mon">Espace Privé</a>
        <% if (typeof user !== 'undefined' && user) { %>
          <a href="/vendeur/dashboard">Dashboard</a>
        <% } %>
      </nav>
      
      <div class="header-actions">
        <div class="search-bar">
          <input type="text" placeholder="Rechercher un produit d'exception...">
          <button><i class="fas fa-search"></i></button>
        </div>
        
        <% if (typeof user !== 'undefined' && user) { %>
          <a href="/vendeur/dashboard" class="icon-btn" title="Mon espace privé">
            <i class="fas fa-crown"></i>
          </a>
        <% } else { %>
          <a href="/auth/login" class="icon-btn" title="Connexion">
            <i class="fas fa-sign-in-alt"></i>
          </a>
        <% } %>
        
        <a href="/panier" class="icon-btn" title="Panier d'exception" id="cartIcon">
          <i class="fas fa-shopping-bag"></i>
          <% if (typeof panierCount !== 'undefined' && panierCount > 0) { %>
            <span class="cart-badge" id="cartBadge"><%= panierCount %></span>
          <% } %>
        </a>
      </div>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>Excellence & Raffinement</h1>
      <p>Découvrez une collection exclusive de produits d'exception, soigneusement sélectionnés pour leur qualité et leur élégance</p>
      <a href="#produits" class="cta-button">Découvrir la Collection</a>
    </div>
  </section>

  <!-- Produits Section -->
  <section class="section" id="produits">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Collection Exclusive</h2>
        <p class="section-subtitle">Des pièces uniques et raffinées sélectionnées avec exigence</p>
      </div>
      
      <% if (typeof produits !== 'undefined' && produits.length > 0) { %>
        <div class="produits-grid">
          <% produits.forEach((produit, index) => { %>
            <div class="produit-card" data-product-index="<%= index %>">
              <!-- Galerie de photos luxueuse -->
              <div class="produit-gallery">
                <% if (produit.imagesGallery && produit.imagesGallery.length > 0) { %>
                  <img src="<%= produit.imagesGallery[0].url %>" 
                       alt="<%= produit.nom %>" 
                       class="gallery-main"
                       data-product-index="<%= index %>"
                       data-current-image="0">
                  
                  <div class="gallery-counter">
                    <span class="current-image">1</span> / <%= produit.imagesGallery.length %>
                  </div>

                  <% if (produit.imagesGallery.length > 1) { %>
                    <div class="gallery-thumbnails">
                      <% produit.imagesGallery.forEach((image, imgIndex) => { %>
                        <img src="<%= image.url %>" 
                             alt="Miniature <%= imgIndex + 1 %>"
                             class="thumbnail <%= imgIndex === 0 ? 'active' : '' %>"
                             data-product-index="<%= index %>"
                             data-image-index="<%= imgIndex %>"
                             onclick="changeMainImage(<%= index %>, <%= imgIndex %>)">
                      <% }); %>
                    </div>
                  <% } %>

                  <button class="gallery-btn" onclick="openGallery(<%= index %>)">
                    <i class="fas fa-expand"></i> Galerie
                  </button>

                <% } else if (produit.image) { %>
                  <img src="<%= produit.image %>" alt="<%= produit.nom %>" class="gallery-main">
                <% } else { %>
                  <div style="background: rgba(255,255,255,0.05); height: 100%; display: flex; align-items: center; justify-content: center; color: var(--text-muted); border: 2px dashed var(--border-gold);">
                    <i class="fas fa-gem" style="font-size: 3rem;"></i>
                  </div>
                <% } %>
              </div>

              <div class="produit-content">
                <h3 class="produit-name"><%= produit.nom %></h3>
                <p class="produit-prix"><%= produit.prix %> <%= produit.devise %></p>
                <p class="produit-boutique">
                  <% if (produit.boutique && produit.boutique.nom) { %>
                    <%= produit.boutique.nom %>
                  <% } else if (produit.vendeur && produit.vendeur.nom) { %>
                    Collection <%= produit.vendeur.nom %>
                  <% } else { %>
                    Collection Privée
                  <% } %>
                </p>
                <% if (produit.description) { %>
                  <p style="color: var(--text-muted); font-size: 0.9rem; margin-bottom: var(--spacing-sm); font-style: italic;">
                    <%= produit.description.length > 120 ? produit.description.substring(0, 120) + '...' : produit.description %>
                  </p>
                <% } %>
                <div class="produit-actions">
                  <form action="/panier/ajouter/<%= produit._id %>" method="POST" style="display: inline; flex: 1;" class="add-to-cart-form">
                    <input type="hidden" name="produitNom" value="<%= produit.nom %>">
                    <input type="hidden" name="produitPrix" value="<%= produit.prix %>">
                    <button type="submit" class="btn btn-primary add-to-cart-btn">
                      <i class="fas fa-crown"></i> Ajouter
                    </button>
                  </form>
                  <a href="/boutique/produit/<%= produit._id %>" class="btn btn-outline">
                    <i class="fas fa-eye"></i> Détails
                  </a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-state" style="background: rgba(255,255,255,0.05); border-radius: var(--border-radius-luxe); padding: var(--spacing-xl); text-align: center; border: 1px solid var(--border-gold);">
          <i class="fas fa-gem" style="font-size: 4rem; color: var(--gold-primary); margin-bottom: var(--spacing-md);"></i>
          <h3 style="color: var(--gold-primary); margin-bottom: var(--spacing-sm);">Collection en Préparation</h3>
          <p style="color: var(--text-muted); margin-bottom: var(--spacing-lg);">Notre collection exclusive sera bientôt dévoilée.</p>
          <% if (typeof user !== 'undefined' && user && user.role === 'vendeur') { %>
            <a href="/produits/ajouter" class="btn btn-primary">
              <i class="fas fa-plus"></i> Créer une Collection
            </a>
          <% } else if (typeof user !== 'undefined' && user) { %>
            <a href="/boutique/creer" class="btn btn-primary">
              <i class="fas fa-store"></i> Devenir Collectionneur
            </a>
          <% } else { %>
            <a href="/auth/register" class="btn btn-primary">
              <i class="fas fa-user-plus"></i> Rejoindre l'Excellence
            </a>
          <% } %>
        </div>
      <% } %>
    </div>
  </section>

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="footer-content">
        <div class="footer-column">
          <h3>LuxeMarket</h3>
          <p style="color: var(--text-muted); font-size: 0.9rem; line-height: 1.6; margin-bottom: var(--spacing-md);">
            Plateforme d'exception dédiée aux collectionneurs et amateurs de raffinement. 
            Excellence garantie.
          </p>
          <div class="social-links">
            <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
            <a href="#" class="social-link"><i class="fab fa-pinterest"></i></a>
            <a href="#" class="social-link"><i class="fab fa-linkedin-in"></i></a>
            <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
          </div>
        </div>
        
        <div class="footer-column">
          <h3>Navigation</h3>
          <ul class="footer-links">
            <li><a href="#"><i class="fas fa-home"></i> Accueil</a></li>
            <li><a href="#produits"><i class="fas fa-gem"></i> Collection</a></li>
            <li><a href="/boutique/mon"><i class="fas fa-user-shield"></i> Espace Privé</a></li>
            <li><a href="/vendeur/dashboard"><i class="fas fa-crown"></i> Dashboard</a></li>
          </ul>
        </div>
        
        <div class="footer-column">
          <h3>Service Concierge</h3>
          <ul class="footer-links">
            <li><a href="#"><i class="fas fa-headset"></i> Service Personnalisé</a></li>
            <li><a href="#"><i class="fas fa-shipping-fast"></i> Livraison Premium</a></li>
            <li><a href="#"><i class="fas fa-undo"></i> Retours d'Exception</a></li>
            <li><a href="#"><i class="fas fa-phone"></i> Contact Privilégié</a></li>
          </ul>
        </div>
        
        <div class="footer-column">
          <h3>L'Excellence</h3>
          <ul class="footer-links">
            <li><a href="#"><i class="fas fa-file-contract"></i> Charte Qualité</a></li>
            <li><a href="#"><i class="fas fa-shield-alt"></i> Confidentialité</a></li>
            <li><a href="#"><i class="fas fa-gavel"></i> Certification</a></li>
            <li><a href="#"><i class="fas fa-award"></i> Nos Engagements</a></li>
          </ul>
        </div>
      </div>
      
      <div class="footer-bottom">
        <p>&copy; 2024 LuxeMarket. Excellence & Raffinement | Tous droits réservés</p>
      </div>
    </div>
  </footer>

  <script>
    // Stocker les données des produits globalement
    const produitsData = <%- JSON.stringify(produits) %>;

    // Variables globales pour la galerie
    let currentGallery = null;
    let currentImageIndex = 0;

    // Fonction pour changer l'image principale
    function changeMainImage(productIndex, imageIndex) {
      const productCard = document.querySelector(`[data-product-index="${productIndex}"]`);
      if (!productCard) return;
      
      const mainImage = productCard.querySelector('.gallery-main');
      const thumbnails = productCard.querySelectorAll('.thumbnail');
      const counter = productCard.querySelector('.current-image');
      
      if (!mainImage) return;
      
      // Animation de fondu
      mainImage.style.opacity = '0';
      
      setTimeout(() => {
        const produit = produitsData[productIndex];
        if (produit.imagesGallery && produit.imagesGallery[imageIndex]) {
          mainImage.src = produit.imagesGallery[imageIndex].url;
          mainImage.setAttribute('data-current-image', imageIndex);
          
          // Animation de fondu
          mainImage.style.opacity = '1';
          
          // Mettre à jour les miniatures actives
          thumbnails.forEach((thumb, index) => {
            thumb.classList.toggle('active', index === imageIndex);
          });
          
          // Mettre à jour le compteur
          if (counter) {
            counter.textContent = imageIndex + 1;
          }
        }
      }, 200);
    }

    // Fonction pour ouvrir la galerie complète
    function openGallery(productIndex) {
      currentGallery = productIndex;
      currentImageIndex = 0;
      
      const produit = produitsData[productIndex];
      const modal = document.getElementById('galleryModal');
      const modalImage = document.getElementById('modalImage');
      const modalCounter = document.getElementById('modalCounter');
      
      if (produit.imagesGallery && produit.imagesGallery.length > 0) {
        modalImage.src = produit.imagesGallery[0].url;
        modalImage.alt = produit.nom;
        modalCounter.textContent = `1 / ${produit.imagesGallery.length}`;
        modal.style.display = 'block';
        document.body.style.overflow = 'hidden';
      }
    }

    // Fonction pour fermer la galerie
    function closeGallery() {
      const modal = document.getElementById('galleryModal');
      modal.style.display = 'none';
      document.body.style.overflow = 'auto';
      currentGallery = null;
    }

    // Fonction pour changer d'image dans le modal
    function changeModalImage(direction) {
      if (currentGallery === null) return;
      
      const produit = produitsData[currentGallery];
      const images = produit.imagesGallery;
      const modalImage = document.getElementById('modalImage');
      const modalCounter = document.getElementById('modalCounter');
      
      currentImageIndex += direction;
      
      // Gérer le défilement circulaire
      if (currentImageIndex < 0) {
        currentImageIndex = images.length - 1;
      } else if (currentImageIndex >= images.length) {
        currentImageIndex = 0;
      }
      
      // Animation de fondu
      modalImage.style.opacity = '0';
      
      setTimeout(() => {
        modalImage.src = images[currentImageIndex].url;
        modalImage.alt = produit.nom;
        modalCounter.textContent = `${currentImageIndex + 1} / ${images.length}`;
        modalImage.style.opacity = '1';
      }, 300);
    }

    // Fonctions pour la notification panier
    function showNotification(productName, productPrice) {
      const notification = document.getElementById('cartNotification');
      const message = document.getElementById('notificationMessage');
      
      message.textContent = `${productName} - ${productPrice} a été ajouté à votre collection`;
      notification.classList.add('show');
      
      // Masquer automatiquement après 5 secondes
      setTimeout(() => {
        hideNotification();
      }, 5000);
    }
    
    function hideNotification() {
      const notification = document.getElementById('cartNotification');
      notification.classList.remove('show');
    }

    // Fonction pour mettre à jour le badge du panier
    function updateCartBadge(count) {
      const cartIcon = document.getElementById('cartIcon');
      let badge = document.getElementById('cartBadge');
      
      if (!badge) {
        badge = document.createElement('span');
        badge.id = 'cartBadge';
        badge.className = 'cart-badge';
        cartIcon.appendChild(badge);
      }
      
      badge.textContent = count;
      
      // Animation du badge (effet luxueux)
      badge.style.animation = 'none';
      setTimeout(() => {
        badge.style.animation = 'pulse 2s infinite';
      }, 10);
    }
    
    // Gestion de l'ajout au panier avec AJAX
    document.addEventListener('DOMContentLoaded', function() {
      const forms = document.querySelectorAll('.add-to-cart-form');
      
      forms.forEach(form => {
        form.addEventListener('submit', function(e) {
          e.preventDefault();
          
          const formData = new FormData(this);
          const productName = this.querySelector('input[name="produitNom"]').value;
          const productPrice = this.querySelector('input[name="produitPrix"]').value;
          const submitBtn = this.querySelector('.add-to-cart-btn');
          
          // Désactiver le bouton pendant la requête
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> AJOUT...';
          
          // Envoyer la requête AJAX
          fetch(this.action, {
            method: 'POST',
            body: formData,
            headers: {
              'X-Requested-With': 'XMLHttpRequest'
            }
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              // Afficher la notification
              showNotification(productName, productPrice);
              
              // Mettre à jour le badge du panier
              updateCartBadge(data.panierCount);
              
              // Effet de confirmation sur le bouton
              submitBtn.innerHTML = '<i class="fas fa-check"></i> AJOUTÉ !';
              submitBtn.style.background = 'linear-gradient(45deg, #27ae60, #2ecc71)';
              
              setTimeout(() => {
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-crown"></i> Ajouter';
                submitBtn.style.background = '';
              }, 2000);
            }
          })
          .catch(error => {
            console.error('Erreur:', error);
            // Fallback: soumettre le formulaire normalement
            this.submit();
          });
        });
      });
      
      // Navigation au clavier pour la galerie
      document.addEventListener('keydown', function(e) {
        const modal = document.getElementById('galleryModal');
        if (modal.style.display === 'block') {
          if (e.key === 'Escape') {
            closeGallery();
          } else if (e.key === 'ArrowLeft') {
            changeModalImage(-1);
          } else if (e.key === 'ArrowRight') {
            changeModalImage(1);
          }
        }
      });

      // Fermer la galerie en cliquant à l'extérieur
      document.getElementById('galleryModal').addEventListener('click', function(e) {
        if (e.target === this) {
          closeGallery();
        }
      });

      // Animation au scroll
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, observerOptions);

      // Observer les cartes produits
      document.querySelectorAll('.produit-card').forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(40px)';
        card.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
        observer.observe(card);
      });

      // Effet de recherche
      const searchInput = document.querySelector('.search-bar input');
      if (searchInput) {
        searchInput.addEventListener('focus', function() {
          this.parentElement.style.transform = 'scale(1.05)';
          this.parentElement.style.boxShadow = 'var(--shadow-gold)';
        });

        searchInput.addEventListener('blur', function() {
          this.parentElement.style.transform = 'scale(1)';
          this.parentElement.style.boxShadow = 'none';
        });
      }
    });
  </script>
</body>
</html>