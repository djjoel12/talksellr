  </header>

  <!-- Main Content -->
  <main>
    <!-- Hero Section -->
    <section class="hero" id="accueil">
      <div class="hero-content">
        <h1><%= boutique.nom %></h1>
        <p><%= boutique.description %></p>
        <a href="#produits" class="cta-button">
          <span>DÉCOUVRIR LA COLLECTION</span>
        </a>
      </div>
    </section>

    <!-- Produits Section -->
    <section class="section" id="produits">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">NOUVELLE COLLECTION</h2>
          <p class="section-subtitle">Découvrez nos dernières créations et pièces exclusives</p>
        </div>
        
        <% if (produits && produits.length > 0) { %>
          <div class="produits-grid">
            <% produits.forEach((produit, index) => { %>
              <div class="produit-card loading" style="animation-delay: <%= index * 0.1 %>s" data-product-index="<%= index %>">
                <!-- Galerie de photos -->
                <div class="produit-gallery">
                  <% if (produit.imagesGallery && produit.imagesGallery.length > 0) { %>
                    <img src="<%= produit.imagesGallery[0].url %>" 
                         alt="<%= produit.nom %>" 
                         class="gallery-main"
                         data-product-index="<%= index %>"
                         data-current-image="0">
                    
                    <div class="gallery-counter">
                      <span class="current-image">1</span> / <%= produit.imagesGallery.length %>
                    </div>

                    <% if (produit.imagesGallery.length > 1) { %>
                      <div class="gallery-thumbnails">
                        <% produit.imagesGallery.forEach((image, imgIndex) => { %>
                          <img src="<%= image.url %>" 
                               alt="Miniature <%= imgIndex + 1 %>"
                               class="thumbnail <%= imgIndex === 0 ? 'active' : '' %>"
                               data-product-index="<%= index %>"
                               data-image-index="<%= imgIndex %>"
                               onclick="changeMainImage(<%= index %>, <%= imgIndex %>)">
                        <% }); %>
                      </div>
                    <% } %>

                    <button class="gallery-btn" onclick="openGallery(<%= index %>)">
                      🖼️ Voir galerie
                    </button>

                  <% } else if (produit.image) { %>
                    <img src="<%= produit.image %>" alt="<%= produit.nom %>" class="gallery-main">
                  <% } else { %>
                    <div style="background: #f0f0f0; height: 100%; display: flex; align-items: center; justify-content: center; color: #999;">
                      📷 Aucune image
                    </div>
                  <% } %>
                  
                  <div class="produit-badge">NOUVEAU</div>
                </div>

                <div class="produit-content">
                  <div class="produit-category">COLLECTION EXCLUSIVE</div>
                  <h3 class="produit-name"><%= produit.nom %></h3>
                  <p class="produit-prix"><%= produit.prix %> <%= produit.devise %></p>
                  <div class="produit-actions">
                    <form action="/panier/ajouter/<%= produit._id %>" method="POST" style="display: inline; flex: 1;" class="add-to-cart-form">
                      <input type="hidden" name="produitNom" value="<%= produit.nom %>">
                      <input type="hidden" name="produitPrix" value="<%= produit.prix %>">
                      <button type="submit" class="btn btn-primary add-to-cart-btn">
                        AJOUTER AU PANIER
                      </button>
                    </form>
                    <a href="/boutique/produit/<%= produit._id %>" class="btn btn-outline">
                      Voir les détails
                    </a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-gem"></i>
            <h3>COLLECTION À VENIR</h3>
            <p>Notre nouvelle collection sera bientôt disponible. Inscrivez-vous pour être informé du lancement.</p>
            <a href="#" class="btn btn-primary">
              ÊTRE INFORMÉ
            </a>
          </div>
        <% } %>
      </div>
    </section>

    <!-- Newsletter Section -->
    <section class="newsletter">
      <div class="container">
        <div class="newsletter-content">
          <h3 class="section-title">NEWSLETTER</h3>
          <p class="section-subtitle">Soyez le premier informé de nos nouvelles collections et offres exclusives</p>
          <form class="newsletter-form">
            <input type="email" placeholder="VOTRE EMAIL" class="newsletter-input" required>
            <button type="submit" class="btn btn-primary">S'INSCRIRE</button>
          </form>
        </div>
      </div>
    </section>
  </main>

