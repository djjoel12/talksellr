  <script>
    // Fonctions pour la notification panier
    function showNotification(productName, productPrice) {
      const notification = document.getElementById('cartNotification');
      const message = document.getElementById('notificationMessage');
      
      message.textContent = `${productName} - ${productPrice} a été ajouté à votre panier`;
      notification.classList.add('show');
      
      // Masquer automatiquement après 5 secondes
      setTimeout(() => {
        hideNotification();
      }, 5000);
    }
    
    function hideNotification() {
      const notification = document.getElementById('cartNotification');
      notification.classList.remove('show');
    }
    
    // Gestion de l'ajout au panier avec AJAX
    document.addEventListener('DOMContentLoaded', function() {
      const forms = document.querySelectorAll('.add-to-cart-form');
      
      forms.forEach(form => {
        form.addEventListener('submit', function(e) {
          e.preventDefault();
          
          const formData = new FormData(this);
          const productName = this.querySelector('input[name="produitNom"]').value;
          const productPrice = this.querySelector('input[name="produitPrix"]').value;
          
          // Envoyer la requête AJAX
          fetch(this.action, {
            method: 'POST',
            body: formData,
            headers: {
              'X-Requested-With': 'XMLHttpRequest'
            }
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              // Afficher la notification
              showNotification(productName, productPrice);
              
              // Mettre à jour le compteur du panier
              const cartCount = document.querySelector('.cart-count');
              if (cartCount) {
                cartCount.textContent = data.panierCount;
              } else {
                // Créer le compteur s'il n'existe pas
                const cartIcon = document.querySelector('.fa-shopping-bag').closest('.icon-btn');
                const countSpan = document.createElement('span');
                countSpan.className = 'cart-count';
                countSpan.textContent = data.panierCount;
                cartIcon.appendChild(countSpan);
              }
            }
          })
          .catch(error => {
            console.error('Erreur:', error);
            // Fallback: soumettre le formulaire normalement
            this.submit();
          });
        });
      });
      
      // Smooth scroll
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });

      // Animation des produits au scroll
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.animationDelay = '0s';
            entry.target.classList.add('loading');
          }
        });
      }, { threshold: 0.1 });

      document.querySelectorAll('.produit-card').forEach(card => {
        observer.observe(card);
      });

      // Effet de recherche
      const searchInput = document.querySelector('.search-bar input');
      if (searchInput) {
        searchInput.addEventListener('focus', function() {
          this.parentElement.style.transform = 'scale(1.02)';
        });

        searchInput.addEventListener('blur', function() {
          this.parentElement.style.transform = 'scale(1)';
        });
      }
    });
  </script>
