<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Mes Produits</title>
  <style>
    :root {
      --primary: #3498db;
      --secondary: #2c3e50;
      --light: #ecf0f1;
      --dark: #34495e;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f8f9fa;
      color: var(--dark);
      line-height: 1.6;
      padding: 20px;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .header {
      text-align: center;
      margin-bottom: 40px;
    }

    .header h1 {
      font-size: 2.5rem;
      color: var(--secondary);
      margin-bottom: 10px;
    }

    .actions {
      display: flex;
      gap: 15px;
      justify-content: center;
      margin-bottom: 30px;
      flex-wrap: wrap;
    }

    .btn {
      padding: 12px 24px;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      transition: all 0.3s ease;
    }

    .btn-primary {
      background: var(--primary);
      color: white;
    }

    .btn-primary:hover {
      background: #2980b9;
    }

    .btn-outline {
      background: transparent;
      border: 2px solid var(--primary);
      color: var(--primary);
    }

    .btn-outline:hover {
      background: var(--primary);
      color: white;
    }

    .produits-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 25px;
      margin-top: 30px;
    }

    .produit-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .produit-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 15px rgba(0,0,0,0.15);
    }

    /* Galerie de photos */
    .produit-gallery {
      position: relative;
      height: 250px;
      overflow: hidden;
    }

    .gallery-main {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: opacity 0.3s ease;
    }

    .gallery-thumbnails {
      position: absolute;
      bottom: 10px;
      left: 0;
      right: 0;
      display: flex;
      justify-content: center;
      gap: 8px;
      padding: 0 10px;
    }

    .thumbnail {
      width: 40px;
      height: 40px;
      border-radius: 4px;
      border: 2px solid white;
      cursor: pointer;
      object-fit: cover;
      transition: all 0.2s ease;
    }

    .thumbnail:hover {
      transform: scale(1.1);
      border-color: var(--primary);
    }

    .thumbnail.active {
      border-color: var(--primary);
      transform: scale(1.1);
    }

    .gallery-counter {
      position: absolute;
      top: 10px;
      right: 10px;
      background: rgba(0,0,0,0.7);
      color: white;
      padding: 4px 8px;
      border-radius: 12px;
      font-size: 0.8rem;
    }

    .produit-info {
      padding: 20px;
    }

    .produit-nom {
      font-size: 1.3rem;
      font-weight: 700;
      margin-bottom: 10px;
      color: var(--secondary);
    }

    .produit-prix {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--primary);
      margin-bottom: 10px;
    }

    .produit-description {
      color: #666;
      margin-bottom: 15px;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .produit-details {
      display: flex;
      justify-content: space-between;
      font-size: 0.9rem;
      color: #888;
      margin-bottom: 15px;
    }

    .produit-actions {
      display: flex;
      gap: 10px;
      margin-top: 15px;
    }

    .btn-small {
      padding: 8px 16px;
      font-size: 0.9rem;
    }

    .btn-danger {
      background: #e74c3c;
      color: white;
    }

    .btn-danger:hover {
      background: #c0392b;
    }

    /* Modal pour la galerie */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.9);
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .modal-content {
      position: relative;
      margin: auto;
      padding: 20px;
      width: 90%;
      max-width: 800px;
      height: 90vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .modal-image {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      border-radius: 8px;
      transition: opacity 0.3s ease;
    }

    .modal-close {
      position: absolute;
      top: 20px;
      right: 30px;
      color: white;
      font-size: 2rem;
      font-weight: bold;
      cursor: pointer;
      background: none;
      border: none;
      z-index: 1001;
    }

    .modal-nav {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(255,255,255,0.2);
      color: white;
      border: none;
      padding: 15px 20px;
      font-size: 1.5rem;
      cursor: pointer;
      border-radius: 50%;
      z-index: 1001;
      transition: background 0.3s ease;
    }

    .modal-prev {
      left: 20px;
    }

    .modal-next {
      right: 20px;
    }

    .modal-nav:hover {
      background: rgba(255,255,255,0.4);
    }

    .modal-counter {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      color: white;
      font-size: 1.1rem;
      background: rgba(0,0,0,0.5);
      padding: 8px 16px;
      border-radius: 20px;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #666;
    }

    .empty-state h3 {
      margin-bottom: 10px;
      color: var(--secondary);
    }

    /* Animation pour le changement d'image */
    .fade-in {
      animation: fadeIn 0.3s ease;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>üì¶ Mes Produits</h1>
      <p>G√©rez tous vos produits en un seul endroit</p>
    </div>

    <div class="actions">
      <a href="/produits/ajouter" class="btn btn-outline">
        ‚ûï Ajouter un produit
      </a>
      <a href="/produits/import-masse" class="btn btn-primary">
        üì¶ Import en masse
      </a>
      <a href="/vendeur/dashboard" class="btn btn-outline">
        ‚Üê Dashboard
      </a>
    </div>

    <% if (produits.length === 0) { %>
      <div class="empty-state">
        <h3>Aucun produit trouv√©</h3>
        <p>Commencez par ajouter votre premier produit</p>
      </div>
    <% } else { %>
      <div class="produits-grid">
        <% produits.forEach((produit, index) => { %>
          <div class="produit-card" data-product-index="<%= index %>">
            <!-- Galerie de photos -->
            <div class="produit-gallery">
              <% if (produit.imagesGallery && produit.imagesGallery.length > 0) { %>
                <img src="<%= produit.imagesGallery[0].url %>" 
                     alt="<%= produit.nom %>" 
                     class="gallery-main"
                     data-product-index="<%= index %>"
                     data-current-image="0">
                
                <div class="gallery-counter">
                  <span class="current-image">1</span> / <%= produit.imagesGallery.length %>
                </div>

                <% if (produit.imagesGallery.length > 1) { %>
                  <div class="gallery-thumbnails">
                    <% produit.imagesGallery.forEach((image, imgIndex) => { %>
                      <img src="<%= image.url %>" 
                           alt="Miniature <%= imgIndex + 1 %>"
                           class="thumbnail <%= imgIndex === 0 ? 'active' : '' %>"
                           data-product-index="<%= index %>"
                           data-image-index="<%= imgIndex %>"
                           onclick="changeMainImage(<%= index %>, <%= imgIndex %>)">
                    <% }); %>
                  </div>
                <% } %>
              <% } else if (produit.image) { %>
                <img src="<%= produit.image %>" alt="<%= produit.nom %>" class="gallery-main">
              <% } else { %>
                <div style="background: #f0f0f0; height: 100%; display: flex; align-items: center; justify-content: center; color: #999;">
                  üì∑ Aucune image
                </div>
              <% } %>
            </div>

            <div class="produit-info">
              <h3 class="produit-nom"><%= produit.nom %></h3>
              <div class="produit-prix">
                <%= produit.prix %> <%= produit.devise %>
              </div>
              
              <% if (produit.description) { %>
                <p class="produit-description"><%= produit.description %></p>
              <% } %>
              
              <div class="produit-details">
                <span>Cat√©gorie: <%= produit.categorie || 'Non d√©finie' %></span>
                <span>Stock: <%= produit.stock %></span>
              </div>
              
              <div class="produit-details">
                <span>SKU: <%= produit.sku || 'Non d√©fini' %></span>
                <span><%= new Date(produit.dateCreation).toLocaleDateString() %></span>
              </div>

              <div class="produit-actions">
                <% if (produit.imagesGallery && produit.imagesGallery.length > 0) { %>
                  <button class="btn btn-outline btn-small" 
                          onclick="openGallery(<%= index %>)">
                    üñºÔ∏è Voir galerie
                  </button>
                <% } %>
                
                <a href="/produits/modifier/<%= produit._id %>" class="btn btn-outline btn-small">
                  ‚úèÔ∏è Modifier
                </a>
                
                <form action="/produits/supprimer/<%= produit._id %>" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-danger btn-small" 
                          onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer ce produit ?')">
                    üóëÔ∏è Supprimer
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <!-- Modal pour la galerie compl√®te -->
  <div id="galleryModal" class="modal">
    <button class="modal-close" onclick="closeGallery()">&times;</button>
    
    <button class="modal-nav modal-prev" onclick="changeModalImage(-1)">‚ùÆ</button>
    <button class="modal-nav modal-next" onclick="changeModalImage(1)">‚ùØ</button>
    
    <div class="modal-content">
      <img id="modalImage" class="modal-image" src="" alt="">
    </div>
    
    <div class="modal-counter">
      <span id="modalCounter">1 / 1</span>
    </div>
  </div>

  <script>
    // Stocker les donn√©es des produits globalement
    const produitsData = <%- JSON.stringify(produits) %>;

    // Variables globales pour la galerie
    let currentGallery = null;
    let currentImageIndex = 0;

    // Fonction pour changer l'image principale
    function changeMainImage(productIndex, imageIndex) {
      console.log('Changement d\'image:', productIndex, imageIndex);
      
      const productCard = document.querySelector(`[data-product-index="${productIndex}"]`);
      if (!productCard) {
        console.error('Carte produit non trouv√©e');
        return;
      }
      
      const mainImage = productCard.querySelector('.gallery-main');
      const thumbnails = productCard.querySelectorAll('.thumbnail');
      const counter = productCard.querySelector('.current-image');
      
      if (!mainImage) {
        console.error('Image principale non trouv√©e');
        return;
      }
      
      // Animation de fondu
      mainImage.style.opacity = '0';
      
      setTimeout(() => {
        // Mettre √† jour l'image principale
        const produit = produitsData[productIndex];
        if (produit.imagesGallery && produit.imagesGallery[imageIndex]) {
          mainImage.src = produit.imagesGallery[imageIndex].url;
          mainImage.setAttribute('data-current-image', imageIndex);
          
          // Animation de fondu
          mainImage.style.opacity = '1';
          
          // Mettre √† jour les miniatures actives
          thumbnails.forEach((thumb, index) => {
            thumb.classList.toggle('active', index === imageIndex);
          });
          
          // Mettre √† jour le compteur
          if (counter) {
            counter.textContent = imageIndex + 1;
          }
        }
      }, 150);
    }

    // Fonction pour ouvrir la galerie compl√®te
    function openGallery(productIndex) {
      currentGallery = productIndex;
      currentImageIndex = 0;
      
      const produit = produitsData[productIndex];
      const modal = document.getElementById('galleryModal');
      const modalImage = document.getElementById('modalImage');
      const modalCounter = document.getElementById('modalCounter');
      
      if (produit.imagesGallery && produit.imagesGallery.length > 0) {
        modalImage.src = produit.imagesGallery[0].url;
        modalImage.alt = produit.nom;
        modalCounter.textContent = `1 / ${produit.imagesGallery.length}`;
        modal.style.display = 'block';
        document.body.style.overflow = 'hidden';
      }
    }

    // Fonction pour fermer la galerie
    function closeGallery() {
      const modal = document.getElementById('galleryModal');
      modal.style.display = 'none';
      document.body.style.overflow = 'auto';
      currentGallery = null;
    }

    // Fonction pour changer d'image dans le modal
    function changeModalImage(direction) {
      if (currentGallery === null) return;
      
      const produit = produitsData[currentGallery];
      const images = produit.imagesGallery;
      const modalImage = document.getElementById('modalImage');
      const modalCounter = document.getElementById('modalCounter');
      
      currentImageIndex += direction;
      
      // G√©rer le d√©filement circulaire
      if (currentImageIndex < 0) {
        currentImageIndex = images.length - 1;
      } else if (currentImageIndex >= images.length) {
        currentImageIndex = 0;
      }
      
      // Animation de fondu
      modalImage.style.opacity = '0';
      
      setTimeout(() => {
        modalImage.src = images[currentImageIndex].url;
        modalImage.alt = produit.nom;
        modalCounter.textContent = `${currentImageIndex + 1} / ${images.length}`;
        modalImage.style.opacity = '1';
      }, 200);
    }

    // Navigation au clavier
    document.addEventListener('keydown', function(e) {
      const modal = document.getElementById('galleryModal');
      if (modal.style.display === 'block') {
        if (e.key === 'Escape') {
          closeGallery();
        } else if (e.key === 'ArrowLeft') {
          changeModalImage(-1);
        } else if (e.key === 'ArrowRight') {
          changeModalImage(1);
        }
      }
    });

    // Fermer en cliquant √† l'ext√©rieur
    document.getElementById('galleryModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeGallery();
      }
    });

    // Initialisation au chargement de la page
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Page produits charg√©e avec succ√®s');
      console.log('Nombre de produits:', produitsData.length);
      
      // Debug: afficher les donn√©es des produits
      produitsData.forEach((produit, index) => {
        console.log(`Produit ${index}:`, produit.nom, 'Images:', produit.imagesGallery ? produit.imagesGallery.length : 0);
      });
    });
  </script>
</body>
</html>