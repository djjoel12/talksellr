  <!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= produit.nom %></title>
  <style>
    .container { max-width: 1200px; margin: 0 auto; padding: 20px; }
    .produit-detail { display: flex; gap: 40px; margin-bottom: 40px; }
    .produit-image { flex: 1; max-width: 500px; }
    .produit-image img { width: 100%; height: auto; border-radius: 8px; }
    .produit-info { flex: 1; }
    .produit-nom { font-size: 2em; margin-bottom: 10px; }
    .produit-prix { font-size: 1.5em; color: #e60000; margin-bottom: 20px; }
    .produit-description { margin-bottom: 20px; line-height: 1.6; }
    .boutique-info { background: #f5f5f5; padding: 15px; border-radius: 8px; margin-bottom: 20px; }
    .btn { 
      display: inline-block; 
      padding: 12px 24px; 
      background: #000; 
      color: white; 
      text-decoration: none; 
      border-radius: 4px; 
      border: none;
      cursor: pointer;
      font-size: 1em;
    }
    .btn-primary { background: #e60000; }
    .btn:hover { opacity: 0.9; }
    .quantite-selector { margin: 20px 0; }
    .quantite-selector select { padding: 8px; font-size: 1em; }
  </style>
</head>
<body>
  <div class="container">
    
    
    <div class="produit-detail">
      <div class="produit-image">
        <img src="<%= produit.image %>" alt="<%= produit.nom %>">
        <% if (produit.videoUrl) { %>
          <div style="margin-top: 20px;">
            <video controls width="100%">
              <source src="<%= produit.videoUrl %>" type="video/mp4">
              Votre navigateur ne supporte pas la vid√©o.
            </video>
          </div>
        <% } %>
      </div>
      
      <div class="produit-info">
        <h1 class="produit-nom"><%= produit.nom %></h1>
        <div class="produit-prix"><%= produit.prix %> <%= produit.devise %></div>
        
        <div class="produit-description">
          <%= produit.description %>
        </div>
        
        <div class="boutique-info">
          <strong>Vendu par :</strong> <%= produit.vendeur.nom %><br>
          <strong>Boutique :</strong> <%= produit.boutique.nom %><br>
          <% if (produit.vendeur.telephone) { %>
            <strong>Contact :</strong> <%= produit.vendeur.telephone %>
          <% } %>
        </div>

        <!-- Formulaire d'ajout au panier -->
        <form action="/panier/ajouter/<%= produit._id %>" method="POST">
          <div class="quantite-selector">
            <label for="quantite">Quantit√© :</label>
            <select name="quantite" id="quantite">
              <% for(let i = 1; i <= 10; i++) { %>
                <option value="<%= i %>"><%= i %></option>
              <% } %>
            </select>
          </div>
          
          <button type="submit" class="btn btn-primary">
            üõí Ajouter au panier
          </button>
        </form>

        <!-- Lien direct WhatsApp (optionnel) -->
        <% if (produit.vendeur.telephone) { %>
          <div style="margin-top: 15px;">
            <a href="https://wa.me/<%= produit.vendeur.telephone.replace(/\D/g, '') %>?text=Bonjour! Je suis int√©ress√© par le produit: <%= encodeURIComponent(produit.nom) %> (<%= encodeURIComponent(produit.prix + ' ' + produit.devise) %>)" 
               target="_blank" 
               class="btn" 
               style="background: #25D366;">
              üì± Contacter sur WhatsApp
            </a>
          </div>
        <% } %>
      </div>
    </div>

    <div style="text-align: center; margin-top: 40px;">
      <a href="/boutique/<%= produit.boutique.slug %>" class="btn">
        üè™ Voir toute la boutique
      </a>
    </div>
  </div>
</body>
</html>